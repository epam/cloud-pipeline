VM_MONITOR_RUN_TIME_LOG=$CP_VM_MONITOR_HOME/logs/runtime.log
mkdir -p $(dirname $VM_MONITOR_RUN_TIME_LOG)
touch $VM_MONITOR_RUN_TIME_LOG

cd $CP_VM_MONITOR_HOME
nohup java $CP_VM_MONITOR_JAVA_OPTS -jar vm-monitor.jar &> $VM_MONITOR_RUN_TIME_LOG &
APP_PID="$!"

sleep 5

# Workaround the container hanging when being terminated
function sig_handler {
    echo "Got SIGTERM, stopping PID $APP_PID and exiting"
    if [ $APP_PID -ne 0 ]; then
        kill -SIGTERM "$APP_PID"
        wait "$APP_PID"
    fi
    exit 143
}
trap 'kill $! ; sig_handler' SIGTERM
tail -F $VM_MONITOR_RUN_TIME_LOG &
wait "$!"
