<!DOCTYPE html>
<html>
    <head>
        <style>
            a.icon {
                padding-inline-start: 1.5em;
                text-decoration: none;
                user-select: auto;
            }
            a.dir {
                background: url(data:image/png;base64,) left top no-repeat;
            }
            a.file {
                background: url(data:image/png;base64,) left top no-repeat;
            }
            td.detailsColumn {
                padding-inline-start: 2em;
                text-align: end;
                white-space: nowrap;
            }
        </style>
    </head>
    <body>
        <table>
            <thead>
                <tr class="header">
                    <th>Name</th>
                    <th>Size</th>
                    <th>Date Modified</th>
                </tr>
            </thead>
            <tbody>
                #foreach($item in $items)
                    <tr>
                        <td align="left">
                            #if($item.type == "Folder")
                                <a class="icon dir" href="${item.path}">${item.name}</a>
                            #else
                                <a class="icon file" href="${item.path}">${item.name}</a>
                            #end
                        </td>
                        <td class="detailsColumn">${item.size}</td>
                        <td class="detailsColumn">${item.changed}</td>
                    </tr>
                #end
            </tbody>
        </table>
    </body>
</html>
