#!/bin/bash

mkdir -p /home/${OWNER}/Desktop
chown ${OWNER} /home/${OWNER}/Desktop
chmod o+rwx /home/${OWNER}/Desktop

# Create desktop entries for icy and IMOD
cat <<EOF >>/home/$OWNER/Desktop/icy.desktop
[Desktop Entry]
Version=1.0
Name=Icy
Comment=
Exec=/opt/icy/icy
Icon=/opt/icy/Contents/Resources/icy.icns
Terminal=false
Type=Application
Categories=Application;
EOF

chmod +x /home/$OWNER/Desktop/icy.desktop

cat <<EOF >>/home/$OWNER/Desktop/imod.desktop
[Desktop Entry]
Version=1.0
Name=Imod
Comment=
Exec=imod
Icon=utilities-terminal
Terminal=false
Type=Application
Categories=Application;
EOF

chmod +x /home/$OWNER/Desktop/imod.desktop
