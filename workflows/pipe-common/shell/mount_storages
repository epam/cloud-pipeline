MOUNT_ROOT=$1
TMP_DIR=$2
MOUNT_TASK_NAME=$3

# Check global variables
if [ -z "$API" ]
  then
    echo "[ERROR] API Url is not set"
	  exit 1
fi

# Check global variables
if [ -z "$API_TOKEN" ]
  then
    echo "[ERROR] API Token is not set"
	  exit 1
fi

# Check arguments
if [ -z "$MOUNT_ROOT" ]
  then
    echo "[ERROR] Mount root point text shall be supplied"
	exit 1
fi

if [ -z "$TMP_DIR" ]
  then
    echo "[ERROR] Temporary directory shall be supplied"
	exit 1
fi

if [ -z "$MOUNT_TASK_NAME" ]
  then
    echo "[ERROR] Task name shall be supplied"
	exit 1
fi

$CP_PYTHON2_PATH "${COMMON_REPO_DIR}/scripts/mount_storage.py" --mount-root "${MOUNT_ROOT}" --tmp-dir "${TMP_DIR}" --task "${MOUNT_TASK_NAME}"
