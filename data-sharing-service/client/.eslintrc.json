{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react", "standard-flow"],
  "env": {
    "browser": true
  },
  "globals": {
    "SERVER": false
  },
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "object-curly-spacing": ["error", "never"],
    "max-len": ["error", 100],
    "react/prop-types": 0,
    "react/no-unused-prop-types": 0,
    "semi": ["error", "always"]
  }
}
