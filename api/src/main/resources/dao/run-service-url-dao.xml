<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="com.epam.pipeline.dao.run.RunServiceUrlDao" id="runServiceUrlDao"
          autowire="byName">
        <constructor-arg>
            <value>
                <!--loadByRunIdsQuery-->
                <![CDATA[
                    SELECT
                        s.id,
                        s.pipeline_run_id,
                        s.region,
                        s.service_url
                    FROM
                        pipeline.pipeline_run_service_url s
                    WHERE
                        s.pipeline_run_id IN (:IDS)

                ]]>
            </value>
        </constructor-arg>
        <constructor-arg>
            <value>
                <!--loadByRunIdQuery-->
                <![CDATA[
                    SELECT
                        s.id,
                        s.pipeline_run_id,
                        s.region,
                        s.service_url
                    FROM
                        pipeline.pipeline_run_service_url s
                    WHERE
                        s.pipeline_run_id = ?
                ]]>
            </value>
        </constructor-arg>
        <constructor-arg>
            <value>
                <!--loadByRunIdAndRegionQuery-->
                <![CDATA[
                    SELECT
                        s.id,
                        s.pipeline_run_id,
                        s.region,
                        s.service_url
                    FROM
                        pipeline.pipeline_run_service_url s
                    WHERE
                        s.pipeline_run_id = ? AND s.region = ?
                ]]>
            </value>
        </constructor-arg>
        <constructor-arg>
            <value>
                <!--createServiceUrlQuery-->
                <![CDATA[
                    INSERT INTO pipeline.pipeline_run_service_url (
                        pipeline_run_id,
                        region,
                        service_url)
                    VALUES (
                        :PIPELINE_RUN_ID,
                        :REGION,
                        :SERVICE_URL)
                ]]>
            </value>
        </constructor-arg>
        <constructor-arg>
            <value>
                <!--updateServiceUrlQuery-->
                <![CDATA[
                    UPDATE pipeline.pipeline_run_service_url SET
                        pipeline_run_id = :PIPELINE_RUN_ID,
                        region = :REGION,
                        SERVICE_URL = :SERVICE_URL
                    WHERE
                        s.id = :ID
                ]]>
            </value>
        </constructor-arg>
        <constructor-arg>
            <value>
                <!--deleteServiceUrlByRunIdQuery-->
                <![CDATA[
                   DELETE FROM
                       pipeline.pipeline_run_service_url s
                   WHERE s.pipeline_run_id = ?
                ]]>
            </value>
        </constructor-arg>
        <constructor-arg>
            <value>
                <!--deleteServiceUrlByIdQuery-->
                <![CDATA[
                   DELETE FROM
                       pipeline.pipeline_run_service_url s
                   WHERE s.id = ?
                ]]>
            </value>
        </constructor-arg>
    </bean>
</beans>
